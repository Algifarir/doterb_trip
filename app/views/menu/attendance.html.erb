<h2>List Attendance</h2>

<%= search_form_for @q, url: menu_attendance_path do |f| %>
  <%= f.label :search %>
  <%= f.search_field :user_full_name_or_user_email_or_event_name_cont %>
  <%= f.submit %>
<% end %>

<%= link_to 'Back', menu_event_path %>
<%= paginate @attendance %>

<table>
  <thead>
    <tr>
      <td><strong>event name</strong></td>
      <td><strong>user id</strong></td>
      <td><strong>email</strong></td>
      <td><strong>name</strong></td>
      <td><strong>status</strong></td>
    </tr>
  </thead>
  <tbody>
    <% @attendance.each do |a| %>
      <tr>
        
        <% if a.status == 'Hadir' %>
          <td><%= a.event.name %></td>
          <td><%= a.user_id %></td>
          <td><%= a.user.email %></td>
          <td><%= a.user.full_name %></td>
          <td><%= a.status %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

