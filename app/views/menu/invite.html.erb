<h2>Invite</h2>

  <%= search_form_for @q, url: invite_path do |f| %>
    <%= f.label :search %>
    <%= f.search_field :full_name_or_email_cont %>
    <%= f.submit %>
  <% end %>

<%= link_to 'Back', events_path, method: :get %>
<%= paginate @users %> 

<table>
  <thead>
    <tr>
      <td><strong>Name</strong></td>
      <td><strong>Email</strong></td>
      <td><strong>Send Invitation</strong></td>
    </tr>
  </thead>
<tbody>
  
  <% @users.each do |u| %>
    <tr>
      <td><%= u.full_name %></td>
      <td><%= u.email %></td>
      <td><%= button_to 'Kirim Undangan', send_invite_path(u.id), data: { confirm: 'Are you sure you want to proceed?' } %></button></td>
    </tr>
  <% end %>
  
</tbody>
</table>